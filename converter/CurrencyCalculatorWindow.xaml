<Window x:Class="CurrencyConverter.Views.CurrencyCalculatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Калькулятор валют" Height="400" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Выбор валют -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
            <ComboBox x:Name="FromCurrencyCombo" Width="100" Margin="5"
                      SelectedIndex="0">
                <ComboBoxItem>RUB</ComboBoxItem>
                <ComboBoxItem>USD</ComboBoxItem>
                <ComboBoxItem>EUR</ComboBoxItem>
            </ComboBox>
            <TextBlock Text=" → " VerticalAlignment="Center"/>
            <ComboBox x:Name="ToCurrencyCombo" Width="100" Margin="5"
                      SelectedIndex="1">
                <ComboBoxItem>USD</ComboBoxItem>
                <ComboBoxItem>EUR</ComboBoxItem>
                <ComboBoxItem>RUB</ComboBoxItem>
            </ComboBox>
        </StackPanel>

        <!-- Ввод суммы -->
        <TextBox x:Name="AmountTextBox" Grid.Row="1" Margin="5" 
                 Text="100" FontSize="16" TextAlignment="Center"/>

        <!-- Кнопка расчета -->
        <Button Grid.Row="2" Content="Рассчитать" Margin="5" Padding="10"
                Click="CalculateButton_Click"/>

        <!-- Результат -->
        <Border Grid.Row="3" BorderBrush="Gray" BorderThickness="1" 
                Margin="5" Padding="10" CornerRadius="5">
            <TextBlock x:Name="ResultText" TextAlignment="Center" FontSize="16"
                       TextWrapping="Wrap"/>
        </Border>

        <!-- Информация о курсе -->
        <Border Grid.Row="4" Background="LightGreen" Margin="5" 
                Padding="10" CornerRadius="5">
            <TextBlock x:Name="RateInfoText" TextAlignment="Center" 
                       TextWrapping="Wrap"/>
        </Border>
    </Grid>
</Window>