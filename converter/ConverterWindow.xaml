<Window x:Class="CurrencyConverter.Views.ConverterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CurrencyConverter.Views"
        mc:Ignorable="d"
        Title="Курсы валют" Height="550" Width="600">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<Border Grid.Row="0" Background="LightGreen" Margin="10" Padding="10" CornerRadius="5"
                MouseDown="BestRate_MouseDown" Cursor="Hand">
			<StackPanel>
				<TextBlock Text="{Binding BestRate.BankName}" FontWeight="Bold" FontSize="16"/>
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="*"/>
					</Grid.ColumnDefinitions>
					<StackPanel Grid.Column="0">
						<TextBlock Text="Доллар США (USD)" FontWeight="Bold"/>
						<TextBlock Text="{Binding BestRate.UsdBuy, StringFormat='Покупка: {0:N2} руб.'}"/>
						<TextBlock Text="{Binding BestRate.UsdSell, StringFormat='Продажа: {0:N2} руб.'}"/>
					</StackPanel>
					<StackPanel Grid.Column="1">
						<TextBlock Text="Евро (EUR)" FontWeight="Bold"/>
						<TextBlock Text="{Binding BestRate.EurBuy, StringFormat='Покупка: {0:N2} руб.'}"/>
						<TextBlock Text="{Binding BestRate.EurSell, StringFormat='Продажа: {0:N2} руб.'}"/>
					</StackPanel>
				</Grid>
			</StackPanel>
		</Border>

		<ScrollViewer Grid.Row="1" Margin="10">
			<ItemsControl ItemsSource="{Binding AllRates}">
				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<Border BorderBrush="Gray" BorderThickness="1" Margin="0,5" Padding="10" CornerRadius="5">
							<StackPanel>
								<TextBlock Text="{Binding BankName}" FontWeight="Bold"/>
								<Grid>
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="*"/>
										<ColumnDefinition Width="*"/>
									</Grid.ColumnDefinitions>
									<StackPanel Grid.Column="0">
										<TextBlock Text="Доллар США (USD)"/>
										<TextBlock Text="{Binding UsdBuy, StringFormat='Покупка: {0:N2} руб.'}"/>
										<TextBlock Text="{Binding UsdSell, StringFormat='Продажа: {0:N2} руб.'}"/>
									</StackPanel>
									<StackPanel Grid.Column="1">
										<TextBlock Text="Евро (EUR)"/>
										<TextBlock Text="{Binding EurBuy, StringFormat='Покупка: {0:N2} руб.'}"/>
										<TextBlock Text="{Binding EurSell, StringFormat='Продажа: {0:N2} руб.'}"/>
									</StackPanel>
								</Grid>
							</StackPanel>
						</Border>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
		</ScrollViewer>

		<Button Grid.Row="2" Content="Калькулятор"
				Margin="0,311,0,0" Padding="5"
				HorizontalAlignment="Center"
                Click="CalculatorButton_Click" Width="212" Height="67" VerticalAlignment="Top"/>
	</Grid>
</Window>