<Window x:Class="CurrencyConverter.Views.BankDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Адреса банков" Height="500" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Лучший курс -->
        <Border Grid.Row="0" Background="LightGreen" Margin="10" Padding="10" CornerRadius="5">
            <StackPanel>
                <TextBlock Text="{Binding BestRate.BankName}" FontWeight="Bold" FontSize="16"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Доллар США (USD)" FontWeight="Bold"/>
                        <TextBlock Text="{Binding BestRate.UsdBuy, StringFormat='Покупка: {0:N2} руб.'}"/>
                        <TextBlock Text="{Binding BestRate.UsdSell, StringFormat='Продажа: {0:N2} руб.'}"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Евро (EUR)" FontWeight="Bold"/>
                        <TextBlock Text="{Binding BestRate.EurBuy, StringFormat='Покупка: {0:N2} руб.'}"/>
                        <TextBlock Text="{Binding BestRate.EurSell, StringFormat='Продажа: {0:N2} руб.'}"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Адреса банков -->
        <ScrollViewer Grid.Row="1" Margin="10">
            <ItemsControl ItemsSource="{Binding FilteredAddresses}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Gray" BorderThickness="1" Margin="0,5" Padding="10" CornerRadius="5">
                            <StackPanel>
                                <TextBlock Text="{Binding BankName}" FontWeight="Bold" FontSize="14"/>
                                <ItemsControl ItemsSource="{Binding Addresses}" Margin="10,0">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" Margin="0,2"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Кнопка Назад -->
        <Button Grid.Row="2" Content="Назад к курсам" 
                Margin="10" Padding="5" 
                HorizontalAlignment="Center"
                Command="{Binding BackCommand}"/>
    </Grid>
</Window>